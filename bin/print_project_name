#!/bin/bash

set -e

NAME=$(git remote -v | head -n1 | awk '{print $2}' | sed -e "s|^.*/||" | cut -d '.' -f 1)

case "$NAME" in
    "www-klue")       echo 'www';;
    "klue-market")    echo 'market';;
    "cert-klue-it")   echo 'cert';;
    "item")           echo 'item';;
    "expert-ui")      echo 'xpui';;
    "seller")         echo 'seller';;
    "klue-api")       echo 'klue-api';;
    "login")          echo 'login';;
    "search-ui")      echo 'search';;
    "api-search")     echo 'search';;
    "api-expert")     echo 'expert';;
    "api-seller")     echo 'seller';;
    "api-chatbot")    echo 'cbot';;
    "api-item")       echo 'item';;
    "api-login")      echo 'login';;
    "api-cert")       echo 'cert';;
    *)                echo $NAME;;
esac
